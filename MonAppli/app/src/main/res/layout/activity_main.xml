<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ui.MainActivity"
    android:orientation="vertical">


    <Button
        android:id="@+id/buttonProgrammerSms"
        android:layout_width="200dp"
        android:text="@string/button_sms"
        android:drawableLeft="@drawable/icone_sms"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/buttonProgrammerMail"
        android:layout_alignStart="@+id/buttonProgrammerMail" />

    <Button
        android:id="@+id/buttonProgrammerMail"
        android:layout_width="200dp"
        android:text="@string/button_mail"
        android:drawableLeft="@drawable/icone_mail"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="45dp"
        android:layout_above="@+id/buttonProgrammerSms"
        android:layout_centerHorizontal="true" />




</RelativeLayout>